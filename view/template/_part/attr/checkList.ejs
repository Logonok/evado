<!-- _part/attr/checkList -->

<% let params = {}; %>
<%- include('_params', {params}) %>

<div class="form-attr <%- params.css %> <%- params.required %> form-group" data-type="checkboxList">
    <label for="<%- params.id %>" class="control-label <%- params.labelCss %>"><%- params.label %></label>
    <div class="<%- params.valueCss %>">
        <input id="<%- params.id %>" name="<%- params.name %>"
               value="<%- params.value %>" type="hidden" class="form-value">
        <div>
            <% for (let item of items) { %>
            <label class="checkbox checkbox-inline">
                <input value="<%- item.value %>" type="checkbox">
                <%- item.text %>
            </label>
            <% } %>
        </div>
        <div class="hint-block"><%- params.hint %></div>
        <div class="error-block"></div>
    </div>
</div>
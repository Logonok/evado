<%
let params = {
    'id': typeof id === 'undefined' ? model.getFormAttrId(attr) : id,
    'name': typeof name === 'undefined' ?  model.getFormAttrName(attr) : name,
    'label': _t(typeof label === 'undefined' ? model.getAttrLabel(attr) : label),
    'required': model.isAttrRequired(attr) ? ' required' : '',
    'error': _t(model.getFirstError(attr))
};
%>
<div class="form-attr form-group<%- params.required %><%- params.error ? ' has-error' : '' %> has-feedback">
    <input id="<%- params.id %>" name="<%- params.name %>" type="password" <%- params.required %>
           class="form-control" placeholder="<%- params.label %>">
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    <div class="error-block"><%= params.error %></div>
</div>
<% layout(_view.get('_layout/main')) -%>

<!-- _layout/content -->
<div class="wrapper">

    <header class="main-header">
        <a href="" class="logo">
            <span class="logo-mini">E<b>M</b></span>
            <span class="logo-lg">Evado.<b>Main</b></span>
        </a>
        <nav class="navbar navbar-static-top" role="navigation" class>
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button"></a>
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <%- include(_view.get('_part/nav/user')) %>
                </ul>
            </div>
            <%- include(_view.get('_part/nav/global-menu-toggle'), {'url': '/default/widget'}) %>
            <%- include(_view.get('_part/tool/modal-back')) %>
        </nav>
    </header>

    <aside class="main-sidebar">
        <section class="sidebar">
            <div>
                <%- _view.anchorWidget('mainMenu') %>
            </div>
        </section>
    </aside>

    <div id="content-wrapper" class="content-wrapper">
        <section class="content-header">
            <h1>
                <%- blocks.title %>
            </h1>
            <ol class="breadcrumb">
                <%- blocks.breadcrumbs %>
            </ol>
        </section>

        <section class="content">
            <%- include(_view.get('_part/flash-alert')) %>
            <%- body -%>
        </section>
    </div>
</div>
<% layout(_view.get('_layout/main')) %>

<!-- _layout/content -->
<div class="wrapper">

    <header class="main-header">

        <%- include(_view.get('_part/nav/logo')) %>

        <nav class="navbar navbar-static-top" role="navigation" class>
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button"></a>
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <%- include(_view.get('_part/nav/user-toggle')) %>
                </ul>
            </div>
            <%- include(_view.get('_part/nav/common-menu-toggle')) %>
            <%- include(_view.get('_part/tool/modal-back')) %>
        </nav>
    </header>

    <aside class="main-sidebar">
        <section class="sidebar">
            <div>
                <%- _view.placeWidget('sideMenu') %>
            </div>
        </section>
    </aside>

    <div id="content-wrapper" class="content-wrapper">
        <section class="content-header">
            <h1><%- blocks.title %></h1>
        </section>

        <section class="content">
            <%- include(_view.get('_part/misc/flash-alert')) %>
            <%- body %>
        </section>
    </div>

    <footer class="main-footer"></footer>
</div>

<%- include(_view.get('_part/misc/dialog')) %>

<template id="notice-template">
    <div class="hidden">
        <button type="button" class="close">&times;</button>
        <p class="message"></p>
    </div>
</template>

